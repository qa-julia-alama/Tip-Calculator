<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- App name -->
    <string name="app_name">Tip Calculator</string>

    <!-- Hint text for editable text field where the user enters the cost of service -->
    <string name="cost_of_service">Cost of Service</string>

    <!-- Question prompt for the group of radio buttons with different tip options -->
    <string name="how_was_the_service">Rate the quality of service: </string>

    <!-- Tip option for amazing service which uses 50% to calculate the tip  -->
    <string name="amazing_service">Awesome (20%)</string>

    <!-- Tip option for good service which uses 25% to calculate the tip  -->
    <string name="good_service">Nice (10%)</string>

    <!-- Tip option for okay service which uses 10% to calculate the tip  -->
    <string name="ok_service">Fine (5%)</string>

    <!-- Text label for toggle switch that asks the user if they want to round up the tip  -->
    <string name="round_up_tip">Round up the tip</string>

    <!-- Label for button that calculates the tip  -->
    <string name="calculate">Calculate</string>

    <!-- Formatted string for the tip result  -->
    <string name="tip_amount">Tip Amount: %s</string>
</resources>